@model IEnumerable<WorkFlowDynamic.DataEntityTypes.SchemeWorkFlowSet>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div>
        <a asp-controller="SchemeWorkFlows" asp-action="Index" class="ui primary button">Créer un workFlow</a>
    </div>
</div>

<div class="card-body" style="z-index: 0;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card" style="max-width: 18rem;">
                    <div class="card-header bg-behance content-center">
                        <i class="fab fa-behance icon text-white my-4 display-4"></i>
                    </div>
                    <div class="card-body row text-center">
                        <div class="col">
                            <div class="text-value-xl">@Html.DisplayFor(modelItem => item.SchemeName)</div>
                            <div class="text-uppercase text-muted small">@Html.DisplayFor(modelItem => item.state)</div>
                        </div>
                        <br />
                        <div class="col">
                            <a asp-controller="Home" asp-action="DemarrerWorkflow" asp-route-id="@item.Id">Démarrer</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>